<section>
    <h2>Add Post</h2>

    <form class="post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text">
        </div>
        <div>
            <label for="post-link">Link</label>>
        </div>
        <button type="submit">Add Post</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Old Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="../public/js/addPost.js"></script>